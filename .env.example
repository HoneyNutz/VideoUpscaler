# Video Upscaler Configuration

# Flask Configuration
FLASK_APP=run_web.py
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///video_upscaler.db

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=2147483648  # 2GB in bytes
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed

# Real-ESRGAN Configuration
DEFAULT_MODEL=RealESRGAN_x4plus
DEFAULT_SCALE=4
DEFAULT_TILE_SIZE=0

# GPU Configuration
# Set to 'cpu' to force CPU processing, 'auto' for automatic detection
DEVICE=auto

# Web Server Configuration
HOST=0.0.0.0
PORT=5001

# Model Download URLs (for automatic downloading)
REALESRGAN_X4PLUS_URL=https://github.com/xinntao/Real-ESRGAN/releases/download/v0.1.0/RealESRGAN_x4plus.pth
REALESR_ANIMEVIDEOV3_URL=https://github.com/xinntao/Real-ESRGAN/releases/download/v0.2.5.0/realesr-animevideov3.pth

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=video_upscaler.log

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Development settings
DEBUG=True
TESTING=False

# Production settings (uncomment in production)
# FLASK_ENV=production
# DEBUG=False
# TESTING=False
